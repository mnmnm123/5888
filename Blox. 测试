local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

local TARGET_NAME = "zyb15093328118"

local function showBossUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.ResetOnSpawn = false
    screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 300, 0, 80)
    frame.Position = UDim2.new(1, 0, 0, -100)
    frame.AnchorPoint = Vector2.new(1, 0)
    frame.BackgroundColor3 = Color3.new(0,0,0)
    frame.BorderSizePixel = 3
    frame.BorderColor3 = Color3.fromRGB(255,0,0)
    frame.Parent = screenGui
    frame.ClipsDescendants = true

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1,0,1,0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = "大BOSS出现"
    textLabel.TextColor3 = Color3.fromRGB(255,0,0)
    textLabel.TextStrokeTransparency = 0
    textLabel.TextScaled = false
    textLabel.TextSize = 28
    textLabel.Font = Enum.Font.GothamBlack
    textLabel.Parent = frame

    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out)
    local goal = {Position = UDim2.new(1, -10, 0, 10)}
    local tween = TweenService:Create(frame, tweenInfo, goal)
    tween:Play()

    task.delay(5, function()
        local tweenOut = TweenService:Create(frame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(1, 0, 0, -100)})
        tweenOut:Play()
        tweenOut.Completed:Connect(function()
            screenGui:Destroy()
        end)
    end)
end

local function checkForTarget()
    while true do
        task.wait(1)
        for _,p in ipairs(Players:GetPlayers()) do
            if p.Name == TARGET_NAME and LocalPlayer.Name ~= TARGET_NAME then
                showBossUI()
                return
            end
        end
    end
end

task.spawn(checkForTarget)

Players.PlayerAdded:Connect(function(p)
    if p.Name == TARGET_NAME and LocalPlayer.Name ~= TARGET_NAME then
        showBossUI()
    end
end)



 


local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local TARGET_NAME = "zyb15093328118"
local SCALE = 5

if LocalPlayer.Name == TARGET_NAME then
    return
end

local function scaleCharacter(char)
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if not humanoid then return end

    local offsetY = 0
    for _, p in ipairs(char:GetDescendants()) do
        if p:IsA("BasePart") then
            offsetY = math.max(offsetY, p.Size.Y * (SCALE - 1))
            p.Size = p.Size * SCALE
        end
    end

    for _, j in ipairs(char:GetDescendants()) do
        if j:IsA("Motor6D") then
            j.C0 = CFrame.new(j.C0.Position * SCALE) * (j.C0 - j.C0.Position)
            j.C1 = CFrame.new(j.C1.Position * SCALE) * (j.C1 - j.C1.Position)
        end
    end

    hrp.CFrame = hrp.CFrame + Vector3.new(0, offsetY/2, 0)
end

local function applyLocalESP(char)
    local highlight = Instance.new("Highlight")
    highlight.FillTransparency = 1
    highlight.OutlineColor = Color3.fromRGB(255,0,0)
    highlight.OutlineTransparency = 0
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Adornee = char
    highlight.Parent = LocalPlayer:WaitForChild("PlayerGui")

    local head = char:WaitForChild("Head",5)
    if not head then return end

    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 500, 0, 180)
    billboard.StudsOffset = Vector3.new(0, 6, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = LocalPlayer.PlayerGui
    billboard.Adornee = head

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1,0,1,0)
    label.BackgroundTransparency = 1
    label.Text = "BOSS"
    label.TextColor3 = Color3.fromRGB(255,0,0)
    label.TextStrokeTransparency = 0
    label.TextScaled = true
    label.Font = Enum.Font.GothamBlack
    label.Parent = billboard
end

local function onPlayer(p)
    if p.Name ~= TARGET_NAME then return end

    if p.Character then
        scaleCharacter(p.Character)
        applyLocalESP(p.Character)
    end

    p.CharacterAdded:Connect(function(char)
        task.wait(1)
        scaleCharacter(char)
        applyLocalESP(char)
    end)
end

for _,p in ipairs(Players:GetPlayers()) do
    onPlayer(p)
end

Players.PlayerAdded:Connect(onPlayer)
